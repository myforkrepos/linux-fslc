/dts-v1/;

#include "imx6dl.dtsi"
#include "imx6qdl-tinyrex.dtsi"

/ {
	model = "Fedevel i.MX6 Solo TinyREX Board";
	compatible = "fsl,imx6dl-tinyrex", "fsl,imx6dl";

	memory {
		reg = <0x10000000 0x10000000>;
	};
};

&i2c2 {
	/* Raspberry Pi camera rev 1.3 */
	ov5647_mipi: ov5647_mipi@36 {
		compatible = "ovti,ov5647_mipi";
		reg = <0x36>;
		/* Pi camera has its own 25MHz clock. */
		clocks = <&clks 0>;
		clock-names = "csi_mclk";
		DOVDD-supply = <&reg_3p3v>;
		AVDD-supply = <&reg_3p3v>;
		DVDD-supply = <&reg_3p3v>;
		pwn-gpios = <&gpio3 10 GPIO_ACTIVE_HIGH>;
		led-gpios = <&gpio2 22 GPIO_ACTIVE_HIGH>;
		ipu_id = <0>;
		csi_id = <1>;
		mclk = <25000000>;
		mclk_source = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_ov5647_mipi>;
		extended-buffer;
	};
};

&i2c3 {
	adv7610: adv7610@4C {
		compatible = "adv,adv7610";
		reg = <0x4C>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_ipu1_csi0>;
		csi_id = <0>;
		ipu_id = <0>;
		reset-gpio = <&gpio1 7 0>;
	};
};

&mxcfb1 {
	status = "okay";
};

&mxcfb2 {
	status = "disabled";
};

&pxp {
	status = "okay";
};

&usdhc3 {
	status = "okay";
};
